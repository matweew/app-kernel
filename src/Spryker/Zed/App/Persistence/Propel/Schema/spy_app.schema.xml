<?xml version="1.0"?>
<database xmlns="spryker:schema-01" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed"
          xsi:schemaLocation="spryker:schema-01 https://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\App\Persistence" package="src.Orm.Zed.App.Persistence">

    <table name="spy_app_config" identifierQuoting="true">
        <column name="id_app_config" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="store_reference" required="true" type="VARCHAR" size="255"/>
        <column name="client_id" required="true" type="VARBINARY" size="255"/>
        <column name="client_secret" required="true" type="VARBINARY" size="255"/>
        <column name="is_active" required="true" defaultValue="false" type="BOOLEAN"/>

        <unique name="spy_app_config-unique-store_reference">
            <unique-column name="store_reference"/>
        </unique>

        <behavior name="timestampable">
            <parameter name="create_column" value="created_at"/>
            <parameter name="update_column" value="updated_at"/>
        </behavior>
    </table>

</database>
